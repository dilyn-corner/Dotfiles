#!/bin/sh
# This has become a generic shrc file; comments will specify sh specifics.

(paleta -r &)

alias github="pash c github.com/dilyn-corner"
alias email="pash c tutanota.com/dilyn.corner"
alias ix="curl -F 'f:1=<-' ix.io"
alias dotties='/usr/bin/git --git-dir=${HOME}/git/dotfiles/ --work-tree=${HOME}'

## ksh (current)
PS1='${PWD} -> '
export HISTFILE=/home/dilyn/.ksh_history

# Scrollback with arrow keys
set -o emacs
alias __A=`echo "\020"`     # up arrow = ^p = back a command
alias __B=`echo "\016"`     # down arrow = ^n = down a command
alias __C=`echo "\006"`     # right arrow = ^f = forward a character
alias __D=`echo "\002"`     # left arrow = ^b = back a character
alias __H=`echo "\001"`     # home = ^a = start of line
alias __Y=`echo "\005"`     # end = ^e = end of line

